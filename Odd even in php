<?php
if (isset($_POST['submit'])) {
  $name= $_POST['name'];
  if ($name %2==0){
    echo "It is even number";
  }
  else{
    echo "It is odd number";
  }
}
?>
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Odd Even Code</title>
</head>
<body>
  <h1>Find Odd or Even</h1>
<form method="POST">
  <input type="text" name="name" placeholder="Enter any number">
  <button type="submit" name="submit">SUBMIT</button>
</form>
</body>
</html>
